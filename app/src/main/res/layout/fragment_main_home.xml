<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/serenebg_inv"
  tools:context=".MainHome">

  <!-- TODO: Update blank fragment layout -->

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
    android:id="@+id/dateTodayText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#234A56"
    android:padding="20dp"
    android:layout_marginBottom="5dp"
    android:textSize="16sp"
    android:text="08 December, 2018" />

  <TextView
    android:id="@+id/homeText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFF"
    android:textSize="25sp"
    android:layout_marginBottom="25dp"
    android:layout_below="@id/dateTodayText"
    android:textAlignment="center"
    android:text="How do you feel today?" />

    <ImageView
      android:id="@+id/homeJournalButton"
      android:layout_width="180dp"
      android:layout_height="35dp"
      android:layout_below="@id/homeText"
      android:layout_marginBottom="25dp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/home_go_to_journal_button" />

    <TextView
      android:id="@+id/recentlyReadText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:textAllCaps="true"
      android:textStyle="bold"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:paddingLeft="15dp"
      android:textColor="#234A56"
      android:textSize="15sp"
      android:layout_below="@+id/homeJournalButton"
      android:background="#BBDADF"
      android:text="Recently Read" />

    <!-- Need list here -->

    <LinearLayout
      android:id="@+id/recentlyRead"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_below="@id/recentlyReadText"
      android:gravity="center_vertical"
      android:layout_marginBottom="5dp"
      android:paddingRight="20dp"
      android:paddingLeft="30dp"
      android:background="#FFF">

      <TextView
        android:id="@+id/articleText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#234A56"
        android:text="Good posture may ease symptoms of depression" />

      <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <Button
        android:id="@+id/articleButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/seui_next_button" />

    </LinearLayout>

  </RelativeLayout>

</FrameLayout>
