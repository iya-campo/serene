<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/serenebg"
    tools:context=".Article">

    <android.support.v7.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <Button
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/account_icon" />

        <ImageView
            android:id="@+id/sereneLogo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/selogo_lotus" />

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@android:color/transparent"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                app:statusBarScrim="?attr/colorPrimaryDark"
                app:titleEnabled="false">

                <ImageView
                    android:id="@+id/sereneInsightsBG"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    tools:ignore="ContentDescription" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/sereneInsightsToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

                <TextView
                    android:id="@+id/sereneInsightTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Serene Insights"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/articleTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="?attr/colorPrimaryDark"
                    android:padding="18dp"
                    android:text="Article Name"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/articleContentScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/articleContentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:padding="16dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec et odio ac tellus sollicitudin dictum sed nec felis. Sed lobortis magna vitae mi mattis faucibus. Integer purus purus, tempus a interdum at, pellentesque a nunc. Nullam nec justo sit amet lacus bibendum tincidunt. Etiam est elit, maximus ultrices metus vel, finibus eleifend nisi. Donec id justo ac risus mattis bibendum sit amet eget magna.\n\nSed arcu metus, condimentum vel leo sit amet, hendrerit iaculis leo. Praesent semper lacus sit amet sapien congue posuere. Cras congue nec lacus vel varius. Aenean et quam fringilla, interdum turpis sit amet, porttitor quam. Nullam quis vulputate dui. Proin vitae convallis metus, et tristique nisl. Nam et sapien ut mi dictum elementum. Quisque ipsum magna, venenatis sed mi at, malesuada sollicitudin velit.\n\nEtiam ultrices tellus vitae varius fermentum. Ut euismod tempus vulputate. Aenean ligula lacus, egestas sed turpis nec, dignissim pharetra purus. Pellentesque ornare leo ligula, eget sollicitudin sapien viverra sed. Nullam velit augue, gravida et eleifend vitae, venenatis eget nunc. Etiam dignissim lorem sed erat ornare pretium. Nulla vulputate tortor nec lectus aliquet, eget faucibus nisi ornare. Maecenas metus metus, placerat et egestas sed, volutpat ac purus. Nullam eu arcu pretium, dapibus dolor sit amet, semper lacus. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec et odio ac tellus sollicitudin dictum sed nec felis. Sed lobortis magna vitae mi mattis faucibus."
                android:textColor="#234A56"
                android:textSize="14sp" />

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>