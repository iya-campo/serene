<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1D0D6"
    tools:context=".SettingsTC">

    <android.support.v7.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <Button
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/account_icon" />

        <ImageView
            android:id="@+id/sereneLogo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/selogo_lotus" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/header"
        android:background="#E1EDF2"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/userText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Bob Bobson"
            android:textColor="#234A56"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/settings_button" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/user"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:text="Terms and Conditions"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settingsTitleButton"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/seui_back_button" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsTitle"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:dropDownHeight="100dp"
        android:paddingHorizontal="30dp">

        <TextView
            android:id="@+id/tcText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#234A56"
            android:textSize="14sp"
            android:text="" />

    </ScrollView>

</RelativeLayout>
