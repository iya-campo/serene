<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/serenebg"
    tools:context=".AccountRegisterInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/serenelogocreate"
            android:layout_width="127dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/selogo_lotus_white" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/serenelogocreate"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Hi [Username], welcome to Serene."
            android:textColor="#234A56"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomeSubtext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:layout_centerHorizontal="true"
            android:text="Before you use the application, we have a few questions that will help us personalize your experience."
            android:textColor="#418094"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/question1Text"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeSubtext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="What would you like us to call you?"
            android:textColor="#418094" />

        <EditText
            android:id="@+id/answer1Field"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_below="@id/question1Text"
            android:layout_centerHorizontal="true"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/question2Text"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer1Field"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="How old are you?"
            android:textColor="#418094" />

        <EditText
            android:id="@+id/answer2Field"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_below="@id/question2Text"
            android:layout_centerHorizontal="true"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <Button
            android:id="@+id/next1Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/answer2Field"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textColor="#89b9c5"
            android:textSize="25dp"
            android:text=">"
            android:background="@drawable/btn_selector5"
            style="?android:attr/borderlessButtonStyle" />

    </RelativeLayout>

</ScrollView>
