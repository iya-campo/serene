<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".SettingsData"
  android:background="#C1D0D6">

  <android.support.v7.widget.Toolbar
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFF"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetEnd="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp">

    <Button
      android:id="@+id/profileButton"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_gravity="start|center_vertical"
      android:layout_marginLeft="15dp"
      android:background="@drawable/account_icon" />

    <ImageView
      android:id="@+id/sereneLogo"
      android:layout_width="60dp"
      android:layout_height="40dp"
      android:layout_gravity="center|center_vertical"
      android:background="@drawable/selogo_lotus" />

  </android.support.v7.widget.Toolbar>

  <FrameLayout
    android:id="@+id/user"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="20dp"
    android:layout_below="@id/header"
    android:background="#E1EDF2"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/userText"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textColor="#234A56"
      android:textSize="28sp"
      android:textStyle="bold"
      android:text="Bob Bobson" />

    <Button
      android:id="@+id/settingsButton"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_gravity="end|center_vertical"
      android:background="@drawable/settings_button" />

  </FrameLayout>

  <FrameLayout
    android:id="@+id/settingsTitle"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="15dp"
    android:layout_below="@id/user"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/settingsTitleText"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginRight="30dp"
      android:layout_gravity="end"
      android:textAlignment="center"
      android:textAllCaps="true"
      android:textColor="#FFFFFF"
      android:gravity="center_vertical"
      android:textSize="18sp"
      android:textStyle="bold"
      android:text="Account Settings" />

    <Button
      android:id="@+id/settingsTitleButton"
      android:layout_width="25dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="15dp"
      android:background="@drawable/seui_back_button" />

  </FrameLayout>

  <TextView
    android:id="@+id/nameText"
    android:layout_width="320dp"
    android:layout_height="30dp"
    android:layout_centerHorizontal="true"
    android:textAllCaps="true"
    android:layout_below="@id/settingsTitle"
    android:textColor="#FFFFFF"
    android:layout_marginTop="35dp"
    android:gravity="center_vertical"
    android:textSize="18sp"
    android:textStyle="bold"
    android:text="Name" />

  <EditText
    android:id="@+id/nameEditText"
    android:layout_width="320dp"
    android:layout_height="25dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/nameText"
    android:layout_marginTop="10dp"
    android:background="#E1EDF2"
    android:paddingLeft="5dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Bob Bobson" />


  <TextView
    android:id="@+id/emailText"
    android:layout_width="320dp"
    android:layout_height="30dp"
    android:layout_centerHorizontal="true"
    android:textAllCaps="true"
    android:layout_below="@id/nameEditText"
    android:textColor="#FFFFFF"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:textSize="18sp"
    android:textStyle="bold"
    android:text="Email Address" />


  <EditText
    android:id="@+id/emailEditText"
    android:layout_width="320dp"
    android:layout_height="25dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/emailText"
    android:layout_marginTop="10dp"
    android:background="#E1EDF2"
    android:paddingLeft="5dp"
    android:ems="10"
    android:inputType="textEmailAddress"
    android:text="bbobson@donbosco.edu.ph" />

  <TextView
    android:id="@+id/passwordText"
    android:layout_width="320dp"
    android:layout_height="30dp"
    android:layout_centerHorizontal="true"
    android:textAllCaps="true"
    android:layout_below="@id/emailEditText"
    android:textColor="#FFFFFF"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:textSize="18sp"
    android:textStyle="bold"
    android:text="Password" />

  <EditText
    android:id="@+id/passwordEditText"
    android:layout_width="320dp"
    android:layout_height="25dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/passwordText"
    android:layout_marginTop="10dp"
    android:background="#E1EDF2"
    android:paddingLeft="5dp"
    android:ems="10"
    android:inputType="textPassword"
    android:text="password" />

  <Button
    android:layout_width="75dp"
    android:layout_height="30dp"
    android:layout_alignParentRight="true"
    android:layout_margin="20dp"
    android:layout_above="@id/deactivateButton"
    android:background="@drawable/save_button" />

  <Button
    android:id="@+id/deactivateButton"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#613E3E"
    android:layout_alignParentBottom="true"
    android:textSize="19sp"
    android:textAlignment="center"
    android:gravity="center_vertical"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:textAllCaps="true"
    android:text="Deactivate Account" />

</RelativeLayout>
