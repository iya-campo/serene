<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/serenebg"
    tools:context=".AccountLogin">

    <ImageView
        android:id="@+id/serenelogocreate"
        android:layout_width="127dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/selogo_lotus_white" />


    <TextView
        android:id="@+id/question1Text"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/serenelogocreate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="What is your nickname?"
        android:textColor="#234A56"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/answer1Field"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_below="@id/question1Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/question2Text"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer1Field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="What is your age?"
        android:textColor="#234A56"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/answer2Field"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_below="@id/question2Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="118dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:id="@+id/confirmButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_selector1"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#418499"
        android:textSize="14dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom"
        android:visibility="gone"
        tools:ignore="Missing Constraints"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="162dp" />

</RelativeLayout>
