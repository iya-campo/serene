<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/serenebg_inv">

    <ListView
        android:id="@+id/friendsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="#00000000"></ListView>

    <TextView
        android:id="@+id/friendsText"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_above="@+id/addFriends"
        android:background="#A2ECFE"
        android:gravity="center_vertical"
        android:text="F r i e n d s"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/addFriends"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#F0FCFF">

        <TextView
            android:id="@+id/addFriendsText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Add a friend"
            android:textAlignment="center"
            android:textColor="#234A56" />

        <Button
            android:id="@+id/addFriendsButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="100dp"
            android:background="@null"
            android:text="+"
            android:textColor="#234A56"
            android:textSize="24sp" />

    </FrameLayout>

</RelativeLayout>
