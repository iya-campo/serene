<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Settings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <Button
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/account_icon" />

        <ImageView
            android:id="@+id/sereneLogo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/selogo_lotus" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/header"
        android:layout_marginBottom="70dp"
        android:background="#E1EDF2"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/userText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Bob Bobson"
            android:textColor="#234A56"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/settings_button" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/notifs"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/notifs"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/user">

        <TextView
            android:id="@+id/notifsText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Notifications"
            android:textAllCaps="true"
            android:textColor="#234A56"
            android:textSize="16sp" />

        <Button
            android:id="@+id/notifsButton"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text=">"
            android:textColor="#234A56"
            android:textSize="18sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/notifs"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/tc"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/notifs">

        <TextView
            android:id="@+id/tcText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Terms and Conditions"
            android:textAllCaps="true"
            android:textColor="#234A56"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tcButton"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text=">"
            android:textColor="#234A56"
            android:textSize="18sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tc"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/pp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/tc"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/ppText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Privacy Policy"
            android:textAllCaps="true"
            android:textColor="#234A56"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ppButton"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text=">"
            android:textColor="#234A56"
            android:textSize="18sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/pp"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/pp">

        <TextView
            android:id="@+id/dataText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Account Settings"
            android:textAllCaps="true"
            android:textColor="#234A56"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dataButton"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text=">"
            android:textColor="#234A56"
            android:textSize="18sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/data"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/loggedInText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Logged in as"
        android:textAlignment="center"
        android:textColor="#234A56"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/myEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loggedInText"
        android:layout_centerHorizontal="true"
        android:text="bbobson@donbosco.edu.ph"
        android:textAlignment="center"
        android:textColor="#234A56"
        android:textSize="16sp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_logout"
        android:gravity="center_vertical"
        android:text="Log Out"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
