<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/serenebg"
    tools:context=".AccountLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/serenelogocreate"
            android:layout_width="127dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/selogo_lotus_white" />

        <TextView
            android:id="@+id/createAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serenelogocreate"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:text="Create your account"
            android:textColor="#234A56"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/newUnText"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/createAccountText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="Username"
            android:textColor="#234A56"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/newUnField"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_below="@id/newUnText"
            android:layout_centerHorizontal="true"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/newEmailText"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/newUnField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Email Address"
            android:textColor="#234A56"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/newEmailField"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_below="@id/newEmailText"
            android:layout_centerHorizontal="true"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textWebEmailAddress"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/newPwText"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/newEmailField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="#234A56"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/newPwField"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_below="@id/newPwText"
            android:layout_centerHorizontal="true"
            android:background="#FFF"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <LinearLayout
            android:id="@+id/tcLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newPwField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tcCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFF"
                android:theme="@style/checkBoxStyle" />

            <TextView
                android:id="@+id/tcText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#418094"
                android:textSize="10dp"
                android:text="I accept the terms and conditions." />

        </LinearLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_below="@id/tcLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Submit"
            android:textSize="14dp"
            android:textColor="#418499"
            android:textAllCaps="false"
            android:background="@drawable/btn_selector1"
            style="?android:attr/borderlessButtonStyle" />

    </RelativeLayout>

</ScrollView>