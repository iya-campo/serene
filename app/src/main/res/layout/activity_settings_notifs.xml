<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1D0D6"
    tools:context=".SettingsNotifs">

    <android.support.v7.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <Button
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/account_icon" />

        <ImageView
            android:id="@+id/sereneLogo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/selogo_lotus" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/header"
        android:background="#E1EDF2"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/userText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Bob Bobson"
            android:textColor="#234A56"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/settings_button" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/user"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:text="Notifications"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settingsTitleButton"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="#89b9c5"
            android:text="&#9668;"
            android:background="@drawable/btn_selector5"
            style="?android:attr/borderlessButtonStyle" />

    </FrameLayout>

    <TextView
        android:id="@+id/alarmsText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/settingsTitle"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical"
        android:text="Alarms"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/alarmOptions"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/alarmsText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addButton"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textColor="#4f6e78"
            android:background="@drawable/btn_selector2"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textColor="#4f6e78"
            android:background="@drawable/btn_selector2"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>


    <TextView
        android:id="@+id/appNotifsText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/alarmOptions"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="App Notifications"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/appNotifsOptions"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/appNotifsText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/onButton"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:text="On"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textColor="#4f6e78"
            android:background="@drawable/btn_selector2"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/offButton"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:text="Off"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textColor="#4f6e78"
            android:background="@drawable/btn_selector2"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>


</RelativeLayout>
