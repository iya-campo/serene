<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".SettingsNotifs"
  android:background="#C1D0D6">

  <android.support.v7.widget.Toolbar
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFF"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetEnd="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp">

    <Button
      android:id="@+id/profileButton"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_gravity="start|center_vertical"
      android:layout_marginLeft="15dp"
      android:background="@drawable/account_icon" />

    <ImageView
      android:id="@+id/sereneLogo"
      android:layout_width="60dp"
      android:layout_height="40dp"
      android:layout_gravity="center|center_vertical"
      android:background="@drawable/selogo_lotus" />

  </android.support.v7.widget.Toolbar>

  <FrameLayout
    android:id="@+id/user"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="20dp"
    android:layout_below="@id/header"
    android:background="#E1EDF2"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/userText"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textColor="#234A56"
      android:textSize="28sp"
      android:textStyle="bold"
      android:text="Bob Bobson" />

    <Button
      android:id="@+id/settingsButton"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_gravity="end|center_vertical"
      android:background="@drawable/settings_button" />

  </FrameLayout>

  <FrameLayout
    android:id="@+id/settingsTitle"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="15dp"
    android:layout_below="@id/user"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/settingsTitleText"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginRight="30dp"
      android:layout_gravity="end"
      android:textAlignment="center"
      android:textAllCaps="true"
      android:textColor="#FFFFFF"
      android:gravity="center_vertical"
      android:textSize="18sp"
      android:textStyle="bold"
      android:text="Notifications" />

    <Button
      android:id="@+id/settingsTitleButton"
      android:layout_width="25dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="15dp"
      android:background="@drawable/seui_back_button" />

  </FrameLayout>

  <TextView
    android:id="@+id/alarmsText"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:textAllCaps="true"
    android:layout_below="@id/settingsTitle"
    android:textColor="#FFFFFF"
    android:layout_marginTop="35dp"
    android:layout_marginLeft="40dp"
    android:gravity="center_vertical"
    android:textSize="18sp"
    android:textStyle="bold"
    android:text="Alarms" />

  <LinearLayout
    android:id="@+id/alarmOptions"
    android:layout_below="@id/alarmsText"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="40dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/addButton"
      android:layout_width="115dp"
      android:layout_height="match_parent"
      android:layout_marginRight="3dp"
      android:background="@drawable/create_button" />

    <Button
      android:id="@+id/deleteButton"
      android:layout_width="115dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="3dp"
      android:background="@drawable/delete_button" />

  </LinearLayout>


  <TextView
    android:id="@+id/appNotifsText"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:textAllCaps="true"
    android:layout_below="@id/alarmOptions"
    android:textColor="#FFFFFF"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="40dp"
    android:gravity="center_vertical"
    android:textSize="18sp"
    android:textStyle="bold"
    android:text="App Notifications" />

  <LinearLayout
    android:id="@+id/appNotifsOptions"
    android:layout_below="@id/appNotifsText"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="40dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/onButton"
      android:layout_width="115dp"
      android:layout_height="match_parent"
      android:layout_marginRight="3dp"
      android:background="@drawable/on_button" />

    <Button
      android:id="@+id/offButton"
      android:layout_width="115dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="3dp"
      android:background="@drawable/off_button" />

  </LinearLayout>


</RelativeLayout>
