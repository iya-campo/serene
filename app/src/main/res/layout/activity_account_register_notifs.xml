<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/serenebg"
    tools:context=".AccountRegisterNotifs">

    <ImageView
        android:id="@+id/serenelogocreate"
        android:layout_width="127dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/selogo_lotus_white" />

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/serenelogocreate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Do you want to set an alarm?"
        android:textColor="#234A56"
        android:textSize="23sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/alarmTitleField"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_alarm_title"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="ALARM TITLE"
        android:textColor="#FFF" />

    <LinearLayout
        android:id="@+id/linear0"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmTitleField"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/timeButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bg_alarm_time"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Choose time"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/notifsText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:text="Do you allow notifications from Serene?"
        android:textColor="#234A56"
        android:textSize="23sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifsText"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yes1Button"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_button2"
            android:text="Yes"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/no1Button"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_button2"
            android:text="No"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/cameraText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:text="Do you allow Serene to access your camera?"
        android:textColor="#234A56"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cameraSubtext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cameraText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="This helps us to monitor your journey."
        android:textColor="#FFF"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cameraSubtext"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yes2Button"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_button2"
            android:text="Yes"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/no2Button"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_button2"
            android:text="No"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/next2Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/seui_next_button" />

</RelativeLayout>
