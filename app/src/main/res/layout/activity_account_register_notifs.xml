<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".AccountRegisterNotifs"
  android:background="@drawable/serenebg">

  <ImageView
    android:id="@+id/serenelogocreate"
    android:layout_width="127dp"
    android:layout_height="75dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="50dp"
    app:srcCompat="@drawable/selogo_lotus_white" />

  <TextView
    android:id="@+id/alarmText"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:layout_below="@id/serenelogocreate"
    android:textColor="#234A56"
    android:textSize="23sp"
    android:textStyle="bold"
    android:text="Do you want to set an alarm?" />

  <EditText
    android:id="@+id/alarmTitleField"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/alarmText"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:background="#8EBCC7"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="ALARM TITLE"
    android:paddingTop="2dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="2dp"
    android:textColor="#FFF" />

  <LinearLayout
    android:id="@+id/linear0"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/alarmTitleField"
    android:orientation="horizontal">

    <Spinner
      android:id="@+id/timeSpinner"
      android:layout_width="80dp"
      android:layout_height="31dp"
      android:background="#234A56" />

    <Spinner
      android:id="@+id/daySpinner"
      android:layout_width="48dp"
      android:layout_height="31dp"
      android:layout_marginLeft="10dp"
      android:background="#234A56" />
  </LinearLayout>

  <TextView
    android:id="@+id/notifsText"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="20dp"
    android:layout_below="@id/alarmText"
    android:textColor="#234A56"
    android:textSize="23sp"
    android:textStyle="bold"
    android:text="Do you allow notifications from Serene?" />

  <LinearLayout
    android:id="@+id/linear1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/notifsText"
    android:orientation="horizontal">

    <Button
      android:id="@+id/yes1Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Yes" />

    <Button
      android:id="@+id/no1Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="No" />

  </LinearLayout>

  <TextView
    android:id="@+id/cameraText"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"
    android:layout_marginBottom="10dp"
    android:layout_below="@id/notifsText"
    android:textColor="#234A56"
    android:textSize="23sp"
    android:textStyle="bold"
    android:text="Do you allow Serene to access your camera?" />

  <TextView
    android:id="@+id/cameraSubtext"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:layout_below="@+id/cameraText"
    android:textColor="#FFF"
    android:textSize="15sp"
    android:text="This helps us to monitor your journey." />

  <LinearLayout
    android:id="@+id/linear2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/cameraSubtext"
    android:orientation="horizontal">

    <Button
      android:id="@+id/yes2Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Yes" />

    <Button
      android:id="@+id/no2Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="No" />
  </LinearLayout>

  <Button
    android:id="@+id/next2Button"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/seui_next_button" />

</RelativeLayout>
