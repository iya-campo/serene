
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".InitialSettings"
  android:background="@drawable/serenebg">

  <TextView
    android:id="@+id/alarmText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="29dp"
    android:text="Do you want to set an alarm?" />

  <EditText
    android:id="@+id/alarmTitleField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="71dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Alarm Title" />

  <Spinner
    android:id="@+id/timeSpinner"
    android:layout_width="87dp"
    android:layout_height="31dp"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/alarmTitleField"
    android:layout_marginTop="137dp"
    android:background="@color/colorPrimaryDark" />

  <Spinner
    android:id="@+id/daySpinner"
    android:layout_width="48dp"
    android:layout_height="31dp"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/timeSpinner"
    android:layout_marginEnd="156dp"
    android:background="@color/colorPrimaryDark" />

  <TextView
    android:id="@+id/notifsText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="193dp"
    android:text="Do you allow notifications from Serene?" />

  <Button
    android:id="@+id/yes1Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/alarmTitleField"
    android:layout_centerVertical="true"
    android:text="Yes" />

  <Button
    android:id="@+id/no1Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="94dp"
    android:text="No" />

  <TextView
    android:id="@+id/cameraText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="185dp"
    android:text="Do you allow Serene to access your camera?" />

  <TextView
    android:id="@+id/cameraSubtext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/cameraText"
    android:layout_below="@+id/cameraText"
    android:layout_marginTop="-185dp"
    android:text="This helps us to monitor your journey." />

  <Button
    android:id="@+id/yes1Button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/alarmTitleField"
    android:layout_centerVertical="true"
    android:text="Yes" />

  <Button
    android:id="@+id/no1Button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="94dp"
    android:text="No" />
</RelativeLayout>
