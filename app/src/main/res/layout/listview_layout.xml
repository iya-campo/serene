<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/article"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="30dp"
        android:background="#FFF">

        <TextView
            android:id="@+id/articleText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#234A56"
            android:text="Article name goes here!" />

        <Button
            android:id="@+id/heartButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/articleButton"
            android:layout_marginRight="5dp"
            android:background="@drawable/seui_save_article_button" />

        <Button
            android:id="@+id/articleButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/seui_next_button" />

    </RelativeLayout>

</LinearLayout>
