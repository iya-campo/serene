
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".AccountRegisterCreate"
  android:background="@drawable/serenebg">

  <ImageView
    android:id="@+id/serenelogocreate"
    android:layout_width="127dp"
    android:layout_height="75dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="50dp"
    app:srcCompat="@drawable/selogo_lotus_white" />

  <TextView
    android:id="@+id/unText"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
    android:layout_below="@id/serenelogocreate"
    android:textColor="#234A56"
    android:textSize="17sp"
    android:text="Username" />

  <EditText
    android:id="@+id/unField"
    android:layout_width="170dp"
    android:layout_height="30dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/unText"
    android:background="#FFF"
    android:ems="10"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:inputType="textPersonName" />

  <TextView
    android:id="@+id/pwText"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_below="@id/unField"
    android:textColor="#234A56"
    android:textSize="17sp"
    android:text="Password" />

  <EditText
    android:id="@+id/pwField"
    android:layout_width="170dp"
    android:layout_height="30dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/pwText"
    android:background="#FFF"
    android:ems="10"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:inputType="textPassword" />

  <TextView
    android:id="@+id/forgotPWText"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/pwField"
    android:layout_marginTop="10dp"
    android:textColor="#418094"
    android:textSize="15sp"
    android:text="Forgot password?" />

  <Button
    android:id="@+id/loginButton"
    android:layout_width="60dp"
    android:layout_height="28dp"
    android:layout_below="@id/forgotPWText"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:background="@drawable/login_button" />

  <Button
    android:id="@+id/registerButton"
    android:layout_width="77dp"
    android:layout_height="31dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="30dp"
    android:background="@drawable/register_button" />

  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity = "center|bottom"
      android:visibility="gone"
      tools:layout_editor_absoluteX="142dp"
      tools:layout_editor_absoluteY="162dp"
      tools:ignore="Missing Constraints"/>

</RelativeLayout>
